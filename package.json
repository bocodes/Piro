{
  "name": "piro",
  "main": "main.js",
  "version": "0.0.2",
  "description": "A raspberry pi car application",
  "author": "Bo Meers <bmeers5@gmail.com>",
  "license": "CC0-1.0",
  "scripts": {
    "start": "electron .",
    "publish": "build --linux -p always"
